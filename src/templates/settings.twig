.maps-label {
	display: block;
	padding: 20px;
	line-height: normal;
}
.maps-label:not(:last-child) {
	border-bottom: 1px solid #D2DBE1;
}
.maps-label strong {
	display: block;
	margin-bottom: 2px;

	color: #29323D;
	font-size: 12px;
	font-weight: 600;
	letter-spacing: 0;
	opacity: 0.7;
